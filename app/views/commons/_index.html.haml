= render 'commons/header'
.container    
  - recipes.each do |recipe|
    .recipe-row
      .recipe-row-contents
        = link_to recipe_path(recipe.id) do
          .recipe-category-image
            - if recipe.category_ids.size >= 2
              %i.fa-solid.fa-utensils
            - elsif recipe.category_ids[0] == 1
              %i.fa-solid.fa-bowl-rice
            - elsif recipe.category_ids[0] == 2
              %i.fa-solid.fa-mug-hot
            - elsif recipe.category_ids[0] == 3
              %i.fa-solid.fa-pizza-slice
            - elsif recipe.category_ids[0] == 4
              %i.fa-solid.fa-carrot
            - elsif recipe.category_ids[0] == 5
              %i.fa-solid.fa-cake-candles
            - else
              %i.fa-solid.fa-utensils
          .recipe-intro
            .recipe-title
              %p= recipe.title
            .recipe-info
              %span= recipe.info
      .recipe-trash
        = link_to recipe_path(recipe.id), data: { method: 'delete', confirm: '本当に削除しますか' } do
          %i.fa-solid.fa-trash

= render 'commons/footer'