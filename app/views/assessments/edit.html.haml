-# = render 'commons/assessment_form'
= form_with(model: @recipe, url:recipe_assessments_path, local: true) do |f|
  %div
    = f.label :taste, '美味しさ'
  %div.starform#star-taste
    = f.hidden_field :taste, id: :review_star
  %div
    = f.label :easily, '作りやすさ'
  %div.starform#star-easily
    = f.hidden_field :easily, id: :review_star  
  %div
    = f.label :cost, '費用'
  %div.starform#star-cost
    = f.hidden_field :cost, id: :review_star  
  %div
    = f.label :revenge, '再挑戦', class: 'app_checkbox'
  %div.app_checkbox
    = f.check_box :revenge, id: :revenge, checked: @recipe.assessment.revenge?
    %label{:for => 'revenge'}

  .active
    = f.submit 'edit', class: 'active-btn'


  :javascript
    $('#star-taste').raty({
      size     : 36,
      starOff:  '#{asset_path('star-off.png')}',
      starOn : '#{asset_path('star-on.png')}',
      starHalf: '#{asset_path('star-half.png')}',
      score: '#{@recipe.assessment.taste}',
      scoreName: 'assessment[taste]',
      half: true,
    });

  :javascript
    $('#star-easily').raty({
      size     : 36,
      starOff:  '#{asset_path('star-off.png')}',
      starOn : '#{asset_path('star-on.png')}',
      starHalf: '#{asset_path('star-half.png')}',
      score: '#{@recipe.assessment.easily}',
      scoreName: 'assessment[easily]',
      half: true,
    });

  :javascript
    $('#star-cost').raty({
      size     : 36,
      starOff:  '#{asset_path('star-off.png')}',
      starOn : '#{asset_path('star-on.png')}',
      starHalf: '#{asset_path('star-half.png')}',
      score: '#{@recipe.assessment.cost}',
      scoreName: 'assessment[cost]',
      half: true,
    });

= render 'commons/footer'