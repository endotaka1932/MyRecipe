= render 'commons/header'

= form_with(model: @assessment, url:recipe_assessment_path, local: true) do |f|
  %div
    = f.label :taste, '美味しさ'
  %div.starform#star-taste
    = f.hidden_field :taste, id: :review_star
  %div
    = f.label :easily, '作りやすさ'
  %div.starform#star-easily
    = f.hidden_field :easily, id: :review_star  
  %div
    = f.label :cost, '費用'
  %div.starform#star-cost
    = f.hidden_field :cost, id: :review_star  
  %div
    = f.label :revenge, '再挑戦', class: 'app_checkbox'
  %div.app_checkbox
    = f.check_box :revenge, id: :revenge
    %label{:for => 'revenge'}

  .active
    = f.submit 'edit', class: 'active-btn'

  = render 'commons/star-assessment/edit'


= render 'commons/footer'