= render 'commons/header'
.container    
  .recipe-row
    .recipe-intro
      .recipe-title
        %p= @recipe.title
      .recipe-url
        %a= @recipe.url
      .recipe-info
        %span= @recipe.info
      .recipe-content
        %p= @recipe.content
  = link_to '編集', edit_recipe_path
  = link_to '評価', new_recipe_assessment_path(@recipe.id)
  = link_to '評価ー編集', edit_recipe_assessment_path(@recipe.id)
  = link_to '評価表示', recipe_assessment_path(@recipe.id)

  - if @recipe.assessment.present?
    .assessment.
      %p 美味しさ
      .star-vlaue#star-taste1
      %p 作りやすさ
      .star-vlaue#star-taste2
      %p 費用
      .star-vlaue#star-taste3

    = render 'commons/star-assessment'

= render 'commons/footer'
